                                button#maximize.btn.btn-default.navbar-btn.btn-xs(type='button')
                                    span.glyphicon.glyphicon-resize-full
                                button#close.btn.btn-default.navbar-btn.btn-xs(type='button', data-toggle='tooltip', data-placement='right', title='Close Dashboard')
                                    span.glyphicon.glyphicon-chevron-left
                    #accordion.panel-group
                        .panel.panel-default
                            .panel-heading
                                h4.panel-title
                                    a#about-site-title(data-toggle='collapse', data-parent='#accordion', href='#collapse1') About
                            #collapse1.panel-collapse.collapse.in
                                .panel-body
                                    .row
                                        #site-about.col-sm-10.col-sm-offset-1
                        .panel.panel-default
                            .panel-heading
                                h4.panel-title
                                    a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapse2') Data Viewer
