block content
    #myModal.modal.fade(role='dialog')
        .modal-dialog
            // Modal content
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal') Ã—
                    h4.modal-title Modal Header
                .modal-body
                    p Help about this tool.
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Close
    // Main Content
    .main-split-pane-frame
        // This div is added for styling purposes only. It's not part of the split-pane plugin.
        .split-pane.vertical-percent
            #left-component.split-pane-component.closed
                // dashboard
                #dashboard-wrapper
                    #dashboard-header
                        .navbar.navbar-default
                            .navbar-header.pull-left
                                a#dashboard-title.navbar-text.navbar-right(href='#')
                                    span#dashboard-title-icon.glyphicon.glyphicon-dashboard
                                    |  Dashboard
